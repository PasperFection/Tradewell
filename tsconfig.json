{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/js",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "chrome",
      "jest",
      "webextension-polyfill",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ],
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
, "database.types.ts", "ts", "__tests__", "api", "backtesting", "components", "config", "performance", "risk", "security", "services", "strategies", "trading", "types", "websocket"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
